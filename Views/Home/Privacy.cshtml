@{
    ViewData["Title"] = "Privacy Policy";
}
<style>
    #privateMessagesList li, #messagesList li {
        padding: 0.3rem 1rem;
        background: green;
        margin: 0.2rem 0;
        color: white;
        border-radius: 1rem;
    }

    #privateMessagesList li {
        padding: 0.3rem 1rem;
        background: red;
        margin: 0.2rem 0;
        color: white;
        border-radius: 1rem;
    }
</style>

<div>
    <form class="form-inline">
        <div class="form-group mr-3">
            <input type="text" name="displayname" id="displayname" placeholder="Type your display name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="button" id="is-online" class="btn btn-success text-white" value="Online" />
        </div>
    </form>
</div>
<section class="mr-3">
    <h2>Private Message</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="container">
                <div class="form-group">
                    <label class="control-label">To User</label>
                    <input type="text" id="userid" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Message</label>
                    <input type="text" id="msg" class="form-control" />
                </div>
                <div class="form-group text-center">
                    <input type="button" id="send-private" class="btn btn-danger" value="Send" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <ul id="privateMessagesList"></ul>
        </div>
    </div>
</section>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chatgroup.js"></script>
